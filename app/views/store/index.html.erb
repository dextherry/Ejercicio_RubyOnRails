<% if notice %>
<p id='notice'><%= notice %>
<% end %>

<h1>Your Pracmatic Catalog</h1>



<% @products.each do |product| %>
	<div class="entry">
		<!-- < %= link_to(image_tag(product.image_url), 
            line_items_path(:product_id => product), 
            html_options = {:method => :post}) %> -->
        <%= form_tag(line_items_path(:product_id => product), :remote=>"true", :class => 'imageproduct') do %>
        	<%= image_submit_tag product.image_url  %>
        <% end %>
		<h3><%= product.title %></h3>
		<%= sanitize(product.description) %>
		<div class="price_line">
			<!-- <span class="price"><%= sprintf("$%0.2f", product.price) %></span> -->
			<span class="price"><%= number_to_currency(product.price) %></span>
			<%= button_to 'Add to Cart', line_items_path(:product_id => product), :remote => true %>
		</div>
	</div>
<% end %>
